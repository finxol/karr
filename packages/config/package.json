{
    "name": "@karr/config",
    "private": true,
    "type": "module",
    "scripts": {
        "lint": "pnpm run --filter '@karr/util' build && eslint . --max-warnings 0",
        "dev": "pnpm run --filter '@karr/util' build && tsc --watch",
        "build": "pnpm run --filter '@karr/util' build && tsc",
        "check-types": "tsc --noEmit",
        "test": "vitest",
        "schema:write": "tsx src/export-schema.ts"
    },
    "exports": {
        ".": {
            "types": "./src/config.ts",
            "default": "./dist/config.js"
        },
        "./static": {
            "types": "./src/static.ts",
            "default": "./dist/static.js"
        }
    },
    "dependencies": {
        "@karr/util": "workspace:*",
        "confbox": "catalog:utils",
        "tinyrainbow": "catalog:utils",
        "zod": "catalog:utils"
    },
    "devDependencies": {
        "@karr/eslint-config": "workspace:*",
        "@karr/tsconfig": "workspace:*",
        "@types/node": "catalog:types",
        "eslint": "catalog:lint",
        "typescript": "catalog:devtools",
        "vite-tsconfig-paths": "catalog:test",
        "vitest": "catalog:test"
    }
}

{
    "name": "@karr/db",
    "private": true,
    "type": "module",
    "scripts": {
        "lint": "eslint . --max-warnings 0",
        "dev": "tsc --watch",
        "build": "tsc",
        "check-types": "tsc --noEmit",
        "test": "vitest",
        "migrations:generate": "drizzle-kit generate"
    },
    "exports": {
        "./migrate": {
            "types": "./src/migrate.ts",
            "default": "./dist/migrate.js"
        },
        ".": {
            "types": "./src/db_conn.ts",
            "default": "./dist/db_conn.js"
        },
        "./schemas/*": {
            "types": "./src/schemas/*",
            "default": "./dist/schemas/*"
        }
    },
    "dependencies": {
        "@karr/config": "workspace:*",
        "@karr/logger": "workspace:*",
        "drizzle-orm": "catalog:api",
        "drizzle-kit": "catalog:api",
        "drizzle-zod": "catalog:api",
        "postgres": "catalog:api",
        "zod": "catalog:utils"
    },
    "devDependencies": {
        "@karr/eslint-config": "workspace:*",
        "@karr/tsconfig": "workspace:*",
        "@types/node": "catalog:types",
        "eslint": "catalog:lint",
        "typescript": "catalog:devtools",
        "vitest": "catalog:test",
        "vite-tsconfig-paths": "catalog:test"
    }
}

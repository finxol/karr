{
    "format_on_save": "on",
    "code_actions_on_format": {
        "source.organizeImports.biome": true,
        "source.fixAll.biome": true
    },
    "formatter": {
        "language_server": {
            "name": "biome"
        }
    },
    "lsp": {
        "biome": {
            "settings": {
                "require_config_file": true
            }
        }
    },
    "languages": {
        "TypeScript": {
            "language_servers": [
                "biome",
                "typescript-language-server",
                "!vtsls"
            ]
        },
        "TSX": {
            "language_servers": [
                "biome",
                "typescript-language-server",
                "!vtsls"
            ]
        },
        "JavaScript": {
            "language_servers": [
                "biome",
                "typescript-language-server",
                "!vtsls"
            ]
        },
        "JSON": {
            "language_servers": ["biome"]
        }
    }
}

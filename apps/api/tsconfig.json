{
    "extends": "@karr/tsconfig/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDirs": ["src", "script"],
        "moduleResolution": "bundler",
        "module": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src", "script"],
    "exclude": ["node_modules", "dist", "out"]
}

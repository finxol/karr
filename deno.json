{
    "workspace": [
        "./apps/api",
        "./apps/auth",
        "./packages/util",
        "./packages/config",
        "./packages/ui"
    ],
    "nodeModulesDir": "auto",
    "imports": {
        "@config": "./packages/config/src/config.ts",
        "@util": "./packages/util/src/utilities.ts",
        "@ui/components": "./packages/ui/src/components/index.ts",
        "@ui/globals": "./packages/ui/src/global.css",
        "husky": "npm:husky@^9.1.7"
    },
    "unstable": [
        "temporal",
        "unsafe-proto"
    ],
    "tasks": {
        "prepare": "husky"
    },
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "npm:react",
        "jsxImportSourceTypes": "npm:@types/react",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ]
    },
    "lint": {
        "include": [
            "apps/**/src/",
            "packages/**/src/",
            "apps/**/src/**/*.tsx",
            "packages/**/src/**/*.tsx"
        ],
        "exclude": [
            "node_modules",
            "**/tests/testdata/",
            "**/src/fixtures/**/*.ts"
        ],
        "rules": {
            "tags": [
                "recommended"
            ],
            "include": [
                "ban-untagged-todo",
                "verbatim-module-syntax",
                "no-undef",
                "no-throw-literal",
                "no-sync-fn-in-async-fn",
                "no-self-compare",
                "no-non-null-assertion",
                "no-external-import",
                "no-eval",
                "no-const-assign",
                "no-await-in-loop",
                "eqeqeq",
                "default-param-last",
                "camelcase",
                "no-console"
            ],
            "exclude": [
                "require-await"
            ]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 90,
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": false,
        "proseWrap": "preserve",
        "include": [
            "apps/**/src/",
            "packages/**/src/",
            "apps/**/src/**/*.tsx",
            "packages/**/src/**/*.tsx",
            "**/*.json",
            "**/*.md",
            "**/*.yml"
        ]
    }
}

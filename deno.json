{
    "workspace": [
        "./apps/api",
        "./apps/auth",
        "./packages/util",
        "./packages/config"
    ],
    "importMap": "./import_map.json",
    "unstable": ["temporal"],
    "tasks": {
        "dev": "deno eval \"import logger from '@util/logger.ts'; logger.warn('TODO: Build and run Docker container'); logger.info('To run the API, first cd into apps/api');\""
    },
    "lint": {
        "include": ["apps/**/src/", "packages/**/src/"],
        "exclude": [
            "node_modules",
            "**/tests/testdata/",
            "**/src/fixtures/**/*.ts"
        ],
        "rules": {
            "tags": ["recommended"],
            "include": [
                "ban-untagged-todo",
                "verbatim-module-syntax",
                "no-undef",
                "no-throw-literal",
                "no-sync-fn-in-async-fn",
                "no-self-compare",
                "no-non-null-assertion",
                "no-external-import",
                "no-eval",
                "no-const-assign",
                "no-await-in-loop",
                "eqeqeq",
                "default-param-last",
                "camelcase",
                "no-console"
            ]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 90,
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": false,
        "proseWrap": "preserve",
        "include": ["apps/**/src/", "packages/**/src/"]
    }
}

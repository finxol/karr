{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "NODE_ENV",
        "DOCKER",
        "WEB_URL",
        "CONFIG_DIR",
        "CONFIG_FILE",

        // Config file overrides
        "API_PORT",
        "API_BASE",
        "ADMIN_EMAIL",
        "LOG_LEVEL",
        "LOG_TIMESTAMP",
        "DB_HOST",
        "DB_PORT",
        "DB_SSL",
        "DB_NAME",
        "DB_USER",
        "DB_PASSWORD",
        "DB_PASSWORD_FILE"
    ],
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**", "out/**", "dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint", "^check-types"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "test": {
            "dependsOn": ["^test"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "start": {
            "dependsOn": ["^start"],
            "cache": false
        }
    }
}

#!/usr/bin/env sh

echo "Running pre-commit hook"

###################################################################
# Run project tests                                               #
###################################################################
pnpm test

###################################################################
# Format, lint, and type check the code                           #
###################################################################
pnpm run format
pnpm run lint

###################################################################
# Format Caddyfile only if caddy is installed                     #
###################################################################
if command -v caddy &> /dev/null
then
    caddy fmt --overwrite ./apps/server/Caddyfile
fi
